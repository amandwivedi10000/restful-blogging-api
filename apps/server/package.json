{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.mjs"
  },
  "dependencies": {
    "@restful-blogging-api/db": "*",
    "@restful-blogging-api/env": "*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@restful-blogging-api/config": "*",
    "@types/bun": "^1.3.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "tsdown": "^0.16.5",
    "typescript": "^5"
  }
}
